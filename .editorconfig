root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

[*.go]
indent_style = tab
indent_size = 4

[*.{sh,bash}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
max_line_length = off
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
indent_size = 4
